{
    # Podemos configurar esses argumentos para realizar paginação
    "from": 0,
    "size": 10,
    "query": {
        "function_score": {
            "query": {
                "bool": {
                    # Array de condições que devem ser efetivadas na query
                    "must": [
                        {
                            "range": {
                                # Sommente aceitaremos perguntas com  respostas
                                "answer_count": {
                                    "gte": 0
                                }
                            }
                        },
                        {
                            # Queremos que nossa query seja comparada com o
                            # título e o corpo da pergunta
                            "multi_match": {
                                "fields": [
                                    "title",
                                    "body"
                                ],
                                "type": "most_fields",
                                "query": "How to change file permissions"
                            }
                        }
                    ]
                }
            }
        
        },
        # Alteramos a forma que um documento recebe sua pontuação
        "script_score": {
            "script": "Math.pow(_score, 1) * Math.log(2 + Math.max(0, doc['score'].value)) * Math.log(1 + doc['answer_count'].value)"
        }
    }
}